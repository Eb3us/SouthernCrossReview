body {
	background-color: #fffdf2;
	margin: 4em 12vw;
	font-size: 18px;
	text-align: left;
	font-weight: 400;
  font-family: 'Anybody', cursive;
  line-height: 1.7em;
}
nav {
  position:fixed;
  top: 0;
  left: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height:1.8em;
  background-color: #303;
  display:flex;
  align-items:center;
  justify-content: space-between;
}
nav a:link, nav a:hover, nav a:visited, nav a:active {
  text-decoration: none;
}
#nav-title {
  font-size: 85%;
  color:#fffdf2;
  font-weight: bold;
  margin:0;
  height: 100%;
  padding:0;
  display:flex;
  align-items:center;
  cursor:pointer;
  padding-left: 0.8em;
  font-family: Potta One, cursive;
}
#nav-category {
  font-weight:bold;
  color:#b8d;
  margin-left:-5em;
  font-size: 90%;
}
#home-icon-div {
  height: 100%;
  margin-right: 0.8em;
  display: flex;
  align-items:center;
  cursor:pointer;
}
#home-text {
  color: #303;
  margin:0;
  margin-right:0.8em;
  height: 100%;
  display:flex;
  align-items: center;
  transition: color 1s;
  text-decoration:none;
  font-size: 90%;
}
#home-icon-div:hover #home-text{
  color: #fffda2;
}
#home-icon {
  max-height: 70%;
}
